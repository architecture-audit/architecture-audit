{
  "name": "databricks-sizing-tests",
  "version": "1.0.0",
  "description": "Test suite for Databricks Sizing Calculator",
  "scripts": {
    "test": "jest",
    "test:unit": "jest --selectProjects='Unit Tests'",
    "test:integration": "jest --selectProjects='Integration Tests'",
    "test:e2e": "jest --selectProjects='E2E Tests'",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "babel-jest": "^29.7.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-puppeteer": "^9.0.0",
    "puppeteer": "^21.0.0"
  },
  "jest": {
    "preset": "./jest.config.js"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  }
}